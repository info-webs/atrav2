---
import { site } from "@content/site";
const phoneNumber = site.phone.replace(/[^+0-9]/g, "");
const waHref = `https://wa.me/${phoneNumber.replace(/^\+/, "")}`;
---

<a href={waHref} target="_blank" rel="noopener noreferrer" class="fixed bottom-6 right-6 z-50 inline-flex items-center gap-2 rounded-full bg-emerald-600 px-4 py-3 text-white shadow-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-400" aria-label="Contactar por WhatsApp">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 11-7.6-12.3 8.38 8.38 0 013.8.9L21 3l-2 8.5z"/></svg>
  <span class="text-sm font-semibold">WhatsApp</span>
</a>