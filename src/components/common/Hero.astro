---
export interface Props {
  eyebrow?: string;
  pretitle?: string;
  title: string;
  subtitle?: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}
const { eyebrow, pretitle, title, subtitle, ctaPrimary, ctaSecondary } = Astro.props as Props;
---

<section class="pt-24 pb-10">
  <div class="mx-auto max-w-4xl px-4 text-center">
    {eyebrow ? <p class="text-sm font-medium text-teal-600">{eyebrow}</p> : null}
    {pretitle ? <p class="mt-2 text-sm text-slate-500">{pretitle}</p> : null}
    <h1 class="mt-4 text-3xl font-bold leading-tight text-slate-900">{title}</h1>
    {subtitle ? <p class="mt-4 text-lg text-slate-600">{subtitle}</p> : null}

    <div class="mt-6 flex justify-center gap-3">
      {ctaPrimary ? <a href={ctaPrimary.href} class="rounded-md bg-emerald-600 px-4 py-2 text-white hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-400">{ctaPrimary.text}</a> : null}
      {ctaSecondary ? <a href={ctaSecondary.href} class="rounded-md border border-slate-200 px-4 py-2 text-slate-800 hover:bg-slate-50">{ctaSecondary.text}</a> : null}
    </div>
  </div>
</section>